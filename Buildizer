build_type: fpm
package_name: runtex
package_cloud: flant/main

fpm_conflicts: [flant-scripts-runtex flant-scripts-runtex2]

fpm_files:
  /usr/bin/runtex: /package/runtex
  /usr/bin/runtex2: /package/runtex

os:
  ubuntu:
    prepare:
    - apt-get install -y psmisc python-setproctitle
  centos:
    prepare:
    - yum install -y psmisc
  centos-centos6:
    prepare:
    - yum install -y epel-release
    - yum install --enablerepo=epel -y python-setproctitle
  centos-centos7:
    prepare:
    - yum install -y python-setproctitle

target:
- ubuntu-12.04
- ubuntu-14.04
- ubuntu-16.04
- centos-centos6
- centos-centos7
